@model IEnumerable<PFDC.LolaAppWeb.Models.FollowupTreatment>

@{
    ViewBag.Title = "Index";
}

<h2>Seguimiento de tratamientos @ViewBag.UserName @ViewBag.UserLastName</h2>

<p>
    @Html.ActionLink("Agregar nuevo tratamiento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tratamiento
            @*@Html.DisplayNameFor(model => model.Treatment.Description)*@
        </th>
        <th>
            Esteticista
            @*@Html.DisplayNameFor(model => model.User.Name)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SessionNumber)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Commentary)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.Patient.Name)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Treatment.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SessionNumber)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Commentary
        </td>*@
        <td>
            @Html.ActionLink("Agregar sesion", "AddSession", new { id=item.Id, nsesion = item.SessionNumber, esteticista = item.UserId, tratamiento = item.TreatmentId} ) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
